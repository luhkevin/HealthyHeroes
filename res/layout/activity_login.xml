<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3E3DD"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/cashbox_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Starting cash"
        android:inputType="numberDecimal"
        android:textSize="36sp" />

    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal" >

    <EditText
        android:id="@+id/participant_name"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:hint="What's your name?"
        android:singleLine="true"
        android:textSize="24sp" >

    </EditText>

    </RelativeLayout>


    <Button
        android:id="@+id/add_participant_button"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="center|top"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="35dp"
        android:layout_weight="1"
        android:background="#0099FF"
        android:onClick="onAddButton"
        android:text="@string/add_participant_button"
        android:textSize="12pt" />

    <!-- BOTTOM BUTTONS -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/login_back_button"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#0099FF"
            android:onClick="onBackButton"
            android:text="@string/login_back_button"
            android:textSize="12pt" />

        <Button
            android:id="@+id/login_continue_button"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#0099FF"
            android:onClick="onFinishButton"
            android:text="@string/login_continue_button"
            android:textSize="12pt" />
    </LinearLayout>

</LinearLayout>